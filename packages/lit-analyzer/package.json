{
	"name": "lit-analyzer-fork",
	"version": "2.0.3",
	"description": "CLI that type checks bindings in lit-html templates",
	"author": "runem",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/JackRobards/lit-analyzer.git"
	},
	"keywords": [
		"lit-html",
		"lit",
		"lit-element",
		"javascript",
		"typescript",
		"web components",
		"web",
		"components",
		"tagged",
		"template"
	],
	"bin": {
		"lit-analyzer-fork": "cli.js"
	},
	"scripts": {
		"build": "wireit",
		"prepublishOnly": "npm test",
		"readme": "readme generate -i readme.blueprint.md -c readme.config.json",
		"test": "wireit",
		"test:ava": "wireit",
		"test:all": "npm test",
		"test:watch": "ava --watch --color",
		"check-version": "wireit"
	},
	"wireit": {
		"build": {
			"command": "tsc --build --pretty",
			"files": [
				"src/**/*",
				"tsconfig.json",
				"../../tsconfig.json"
			],
			"output": [
				"lib",
				"test",
				"scripts",
				"index.js",
				"index.d.ts",
				"index.d.ts.map",
				".tsbuildinfo"
			],
			"clean": "if-file-deleted"
		},
		"test": {
			"dependencies": [
				"test:ava",
				"check-version"
			]
		},
		"test:ava": {
			"dependencies": [
				"build"
			],
			"command": "ava --color",
			"output": [],
			"files": [
				"package.json"
			]
		},
		"check-version": {
			"dependencies": [
				"build"
			],
			"files": [
				"package.json",
				"scripts/check-version.js"
			],
			"command": "node scripts/check-version.js"
		}
	},
	"main": "index.js",
	"typings": "index.d.ts",
	"files": [
		"/lib/",
		"index.js",
		"index.d.ts",
		"index.d.ts.map",
		"cli.js"
	],
	"dependencies": {
		"@vscode/web-custom-data": "^0.4.2",
		"chalk": "^5.4.0",
		"didyoumean2": "7.0.4",
		"fast-glob": "^3.2.11",
		"parse5": "7.2.1",
		"ts-simple-type": "~2.0.0-next.0",
		"vscode-css-languageservice": "6.3.2",
		"vscode-html-languageservice": "5.3.1",
		"web-component-analyzer-fork": "^2.0.0"
	},
	"devDependencies": {
		"@types/node": "^22.10.2",
		"ava": "^6.2.0",
		"tslib": "^2.0.0",
		"typescript": "^5.7.2",
		"typescript-5.4": "npm:typescript@~5.4.0",
		"typescript-5.5": "npm:typescript@~5.5.0",
		"typescript-5.6": "npm:typescript@~5.6.0",
		"typescript-5.7": "npm:typescript@~5.7.0",
		"wireit": "^0.9.5"
	},
	"ava": {
		"cache": true,
		"timeout": "200s",
		"extensions": [
			"js"
		],
		"snapshotDir": "test/snapshots/results",
		"files": [
			"test/**/*.js",
			"!test/helpers/**/*"
		]
	},
	"contributors": [
		{
			"name": "Rune Mehlsen",
			"url": "https://twitter.com/runemehlsen",
			"img": "https://avatars2.githubusercontent.com/u/5372940?s=460&v=4"
		},
		{
			"name": "Andreas Mehlsen",
			"url": "https://twitter.com/andreasmehlsen",
			"img": "https://avatars1.githubusercontent.com/u/6267397?s=460&v=4"
		},
		{
			"name": "You?",
			"img": "https://joeschmoe.io/api/v1/random",
			"url": "https://github.com/JackRobards/lit-analyzer/blob/master/CONTRIBUTING.md"
		}
	]
}
