{
	"name": "@jackolope/ts-lit-plugin",
	"version": "3.1.3",
	"description": "Typescript plugin that adds type checking and code completion to lit-html. Fork of the original ts-lit-plugin.",
	"author": "JackRobards",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/JackRobards/lit-analyzer.git"
	},
	"keywords": [
		"lit-html",
		"lit",
		"lit-element",
		"javascript",
		"typescript",
		"web components",
		"web",
		"components",
		"tagged",
		"template"
	],
	"scripts": {
		"watch": "tsc --watch",
		"build": "wireit",
		"eslint": "eslint src",
		"test": "wireit",
		"readme": "npx @appnest/readme generate -i readme.blueprint.md -c readme.config.json"
	},
	"wireit": {
		"build": {
			"dependencies": [
				"../lit-analyzer:build"
			],
			"command": "tsc --build --pretty",
			"files": [
				"src/**/*",
				"tsconfig.json"
			],
			"output": [
				"lib",
				"./tsbuildinfo"
			],
			"clean": "if-file-deleted"
		},
		"test": {
			"dependencies": [
				"build"
			]
		}
	},
	"main": "index.js",
	"files": [
		"/lib/",
		"/html-documentation/"
	],
	"dependencies": {
		"@jackolope/lit-analyzer": "^3.1.3",
		"@jackolope/web-component-analyzer": "^4.0.2"
	},
	"devDependencies": {
		"@types/node": "^22.15.29",
		"esbuild": "^0.25.3",
		"typescript": "^5.8.3",
		"wireit": "^0.14.12"
	},
	"contributors": [
		{
			"name": "Rune Mehlsen",
			"url": "https://twitter.com/runemehlsen",
			"img": "https://avatars2.githubusercontent.com/u/5372940?s=460&v=4"
		},
		{
			"name": "Andreas Mehlsen",
			"url": "https://twitter.com/andreasmehlsen",
			"img": "https://avatars1.githubusercontent.com/u/6267397?s=460&v=4"
		},
		{
			"name": "You?",
			"img": "https://joeschmoe.io/api/v1/random",
			"url": "https://github.com/JackRobards/lit-analyzer/blob/master/CONTRIBUTING.md"
		}
	],
	"engines": {
		"node": ">=18"
	}
}
